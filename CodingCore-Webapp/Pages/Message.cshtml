@page
@model MessageModel

@{
    ViewData["Title"] = "Messages";
}
<h1>Messages</h1>
<p>Get conversation on a role!</p>
<table class="table">
    <thead>
        <tr>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Content</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model.Messages)
        {
            <tr>
<td>@message.Sender.Name</td>
<td>@message.Receiver.Name</td>
<td>@message.Content</td>
  </tr>
     }
    </tbody>
</table>
